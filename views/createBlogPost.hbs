<div class="adjustingPages">
  <div class="adjustingText">
    <h1 class="pageHeadings">Create a Blog Post </h1>
    {{#if errors.length}}
      <p> Can not create a blog post because:</p>

      {{#each errors}}
        <li class="errosColor"> {{this}} </li>
      {{/each}}

    {{/if}}

    <form action="/createBlogPost" method="post">

      <div>
        Add title:
        <input
          class="form-input"
          id="input-example-1"
          type="text"
          name="title"
          value="{{title}}"
        />
      </div>

      <div>
        Add content:
        <input
          class="form-input inputFieldAdjustment"
          id="input-example-1"
          type="text"
          name="content"
          value="{{content}}"
        />
      </div>

      <div>
        Add source:
        <input
          class="form-input"
          id="input-example-1"
          type="text"
          name="source"
          value="{{source}}"
        />
      </div>

      <input
        class="btn btn-primary input-group-btn addMarginButton"
        type="submit"
        value="Create"
      />

    </form>
  </div>
</div>
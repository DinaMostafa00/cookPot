<div class="adjustingPages">
  <h1>Create a Blog Post </h1>
  {{#if errors.length}}
    <p> Can not create a blog post because:</p>

    <ul>
      {{#each errors}}
        {{this}}
      {{/each}}
    </ul>

  {{/if}}

  <form action="/createBlogPost" method="post">

    <div>
      Add title:
      <input
        class="form-input"
        id="input-example-1"
        type="text"
        name="title"
        value="{{title}}"
      />
    </div>

    <div>
      Add content:
      <input
        class="form-input inputFieldAdjustment"
        id="input-example-1"
        type="text"
        name="content"
        value="{{content}}"
      />
    </div>

    <div>
      Add source:
      <input
        class="form-input"
        id="input-example-1"
        type="text"
        name="source"
        value="{{source}}"
      />
    </div>

    <input
      class="btn btn-primary input-group-btn"
      type="submit"
      value="Create"
    />

  </form>
</div>
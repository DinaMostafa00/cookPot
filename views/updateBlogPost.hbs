<div class="adjustingPages">
  <div class="adjustingText">
<h1>Update Blog Post </h1>
  {{#if errors.length}}
  <p> Can not write a comment because:</p>

  <ul>
    {{#each errors}}
      {{this}}
    {{/each}}
  </ul>
  
{{/if}}
 
 
 <form action="/updateBlogPost/{{id}}" method="POST">
  <div>
    update title:
    <input type="text" name="title" value="{{blogPost.title}}" />
  </div>

  <div>
    update content:
    <input type="text" name="content" value="{{blogPost.content}}" />
  </div>

  <div>
    update source:
    <input type="text" name="source" value="{{blogPost.source}}" />
  </div>

  <input type="submit" value="update" />
    </div>
</div>
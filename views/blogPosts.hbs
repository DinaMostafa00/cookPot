<h1 class="addingMarginHeadings">Blogs</h1>

{{#if blogPosts.length}}

  {{#each blogPosts}}

    <div class="card">
      <div class="card-header addingMargin">
        <div class="card-title h5">
          <a href="/blogPosts/{{id}}">
            {{title}}</a>
        </div>

      </div>
    </div>
  {{/each}}

{{else}}

  <p> wait for upcoming recipes</p>

{{/if}}
   <div class="adjustingPages">
  <div class="adjustingText">

   <h1>Update Recipe</h1>
{{#if errors.length}}
      <p> Can not write a comment because:</p>
      
        {{#each errors}}
           <li class="errosColor"> {{this}} </li>
        {{/each}}
     

{{/if}}
 
 
 <form action="/updateRecipe/{{id}}" method="post" enctype="multipart/form-data">
  <div class="addMargin">
    update title:
    <input type="text" name="title" value="{{recipe.title}}" />
  </div>

  <div class="addMargin">
    update description:
    <input type="text" name="description" value="{{recipe.description}}" />
  </div>

  <div class="addMargin">
    update ingredients:
    <input type="text" name="ingredients" value="{{recipe.ingredients}}" />
  </div>

 <div class="addMargin">
    update directions:
    <input type="text" name="directions" value="{{recipe.directions}}" />
  </div>

  <div class="addMargin">
    update duration:
    <input type="text" name="duration" value="{{recipe.duration}}" />
  </div>

  <div class="addMargin">
    update calories:
    <input type="text" name="calories" value="{{recipe.calories}}" />
  </div>


{{!-- durationCategory --}}

    <h2>update duration category: </h2>
      <select class="addMargin" name="durationCategory" value="{{recipe.durationCategory}}">
            <option> </option>
            <option {{#if isSomethingQuickSelected}}selected{{/if}}>Something quick</option>
            <option {{#if isIHaveTimeSelected}}selected{{/if}}>I have time</option>
      </select>




{{!-- calories --}}

      <h2>update calories category: </h2>
          <select class="addMargin" name="caloriesCategory" value="{{recipe.caloriesCategory}}">
              <option> </option>
              <option {{#if isLowInCaloriesSelected}}selected{{/if}}>Low in calories</option>
              <option {{#if isHighInCaloriesHighSelected}}selected{{/if}}>High in calories </option>
            </select>
     



{{!-- image --}}


<h2>update Images here</h2>

<input type="file" name="image" />
 <input type="submit" value="update" />


    </div>
</div>

<h1>Update Comment</h1>

{{#if validationErrors.length}}
  <p> Can not write a comment because:</p>

  <ul>
    {{#each validationErrors}}
      {{this}}
    {{/each}}
  </ul>

{{/if}}

<form action="/updateComment/{{id}}/{{comment.blogPostId}}" method="POST">
  <div>
    update Name:
    <input type="text" name="commenterName" value="{{comment.commenterName}}" />
  </div>

  <div>
    update title:
    <input type="text" name="title" value="{{comment.title}}" />
  </div>

  <div>
    update comment:
    <input type="text" name="comment" value="{{comment.comment}}" />
  </div>

  <input type="submit" value="update" />

</form>
{{#if blogPost}}
  <h1>
    {{blogPost.title}}
  </h1>
  <p>
    {{blogPost.content}}
  </p>
  <p>
    source:
    {{blogPost.source}}
  </p>

{{else}}
  <p> this blog does not exist.</p>
{{/if}}

{{! ////// }}

<h1>Leave comment here</h1>
<form action="/blogs/{{blogPost.id}}" method="post">

  <div>
    Name:
    <input type="text" name="commenterName" />
  </div>

  <div>
    Title:
    <input type="text" name="title" />
  </div>

  <div>
    Comment:
    <input type="text" name="comment" />
  </div>

  <input type="submit" value="Create" />

</form>

/////Comment section

<h1>Comments</h1>
{{#if comments.length}}
  <ul>
    {{#each comments}}
      <li>
        {{commenterName}}
        {{title}}
        {{comment}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p> no comments at the moment</p>
{{/if}}
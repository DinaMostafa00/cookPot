<h1 class="addingMarginHeadings">Recipes</h1>

{{#if recipes.length}}

  {{#each recipes}}

    <div class="card">
      <div class="card-header addingMargin">
        <div class="card-title h5">
          <a href="/recipes/{{id}}">
            {{title}}</a>

        </div>
        <div class="card-subtitle text-gray">
          <p>{{description}}</p>

        </div>
      </div>
    </div>
  {{/each}}

{{else}}

  <p> Wait for our upcoming recipes</p>

{{/if}}
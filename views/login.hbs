{{#if errors.length}}
  <p> Can not log in because:</p>

  <ul>
    {{#each errors}}
      {{this}}
    {{/each}}
  </ul>

{{/if}}

<h1>Login</h1>
<form action="" method="post">
  <div>
    Username:<input type="text" name="username" />
  </div>
  <div>
    Password:<input type="password" name="password" />
  </div>
  <input type="submit" value="Login" />
</form>